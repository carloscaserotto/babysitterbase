<h1 class="text-center mt-4"><%= @employee.username %>'s profile </h1>

<div class="container">
            <div class="row justify-content-md-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header font-italic">
                            <%= link_to @employee.username, '#' %>
                        <div class="card-body">
                        <div class="card-text text-left"><%= simple_format(@employee.description) %></div>
                            <h5 class="card-title">                            
                            <%= link_to 'Go to Babysitters', employees_path, class:"btn btn-outline-success" %>
                            <%= link_to 'Edit profile', edit_employee_path(@employee), class:"btn btn-outline-info" %>                                                        
                            <%= link_to 'Delete profile', employee_path(@employee), method: :delete, class:"btn btn-outline-danger",
                                    data: { confirm: "Are your sure you want to delete the user account and all associated articles?"} %>                                                       
                        </div>
                        <div class="card-footer text-muted">
                           <small> Joined <%= time_ago_in_words(@employee.created_at) %> ago</small>
                        </div>
                    </div>
                </div>
            </div>
</div>