<h1 class="text-center mt-4">Users</h1>   
<div class="container">
        <% @users.each do |user| %>
            <div class="row justify-content-md-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header font-italic">
                            <%= link_to user.username, user_path(user) %>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">                            
                            <%= link_to 'View profile', user_path(user), class:"btn btn-outline-success" %>
                            <% if logged_in? && (current_user == user || current_user.admin?) %>
                                <%= link_to 'Edit profile', edit_user_path(user), class:"btn btn-outline-info" %>                                                        
                                <%= link_to 'Delete profile', user_path(user), method: :delete, class:"btn btn-outline-danger",
                                            data: { confirm: "Are your sure you want to delete the user account and all associated articles?"} %>                                                       
                            <% end %>
                        </div>
                        <div class="card-footer text-muted">
                           <small> Joined <%= time_ago_in_words(user.created_at) %> ago</small>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
</div>

