<h1 class="text-center mt-4">Babysitters</h1>   
<div class="container">
        <% @employees.each do |employee| %>
            <div class="row justify-content-md-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header font-italic">
                            <%= link_to employee.username, employee_path(employee) %>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">    
                            <p class="card-text"><%= truncate(employee.description, length:100) %></p>                        
                            <%= link_to 'View profile', employee_path(employee), class:"btn btn-outline-success" %>
                            <%= link_to 'Edit profile', edit_employee_path(employee), class:"btn btn-outline-info" %>                                                        
                            <%= link_to 'Delete profile', employee_path(employee), method: :delete, class:"btn btn-outline-danger",
                                            data: { confirm: "Are your sure you want to delete the user account and all associated articles?"} %>                                                       
                            
                        </div>
                        <div class="card-footer text-muted">
                           <small> Joined <%= time_ago_in_words(employee.created_at) %> ago</small>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
</div>